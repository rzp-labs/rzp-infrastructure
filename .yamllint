---
extends: default

rules:
  line-length:
    max: 120
    level: warning
  comments:
    min-spaces-from-content: 1
  comments-indentation: disable
  document-start: enable
  truthy: enable
  brackets:
    max-spaces-inside: 1
  braces:
    max-spaces-inside: 1
ignore: |-
  .venv/
  venv/
  node_modules/
  .tox/
  kubernetes/apps/*/base/
  kubernetes/apps/*/overlays/*/
