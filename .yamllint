---
extends: default

rules:
  line-length:
    max: 120
    level: warning
  comments:
    min-spaces-from-content: 1
  comments-indentation: disable
  document-start:
    present: true
  truthy:
    allowed-values: ['true', 'false', 'on', 'off']
  brackets:
    max-spaces-inside: 1
  braces:
    max-spaces-inside: 1

ignore: |
  .venv/
  venv/
  node_modules/
  .tox/
  kubernetes/apps/*/base/
  kubernetes/apps/*/overlays/*/
