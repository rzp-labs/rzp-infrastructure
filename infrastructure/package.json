{
  "name": "rzp-infra",
  "main": "index.ts",
  "devDependencies": {
    "@eslint/js": "^9.30.0",
    "@kubernetes/client-node": "^1.3.0",
    "@pulumi/cloudflare": "^6.3.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^18",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "eslint": "^9.30.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.1",
    "globals": "^16.3.0",
    "jest": "^30.0.3",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.35.1"
  },
  "dependencies": {
    "@muhlba91/pulumi-proxmoxve": "^7.2.0",
    "@pulumi/command": "^1.1.0",
    "@pulumi/kubernetes": "^4.23.0",
    "@pulumi/pulumi": "^3.113.0"
  },
  "scripts": {
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "lint": "eslint \"**/*.{ts,js}\"",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:k3s": "jest tests/unit/k3s tests/integration/k3s",
    "test:k3s:unit": "jest tests/unit/k3s",
    "test:k3s:integration": "jest tests/integration/k3s",
    "test:proxmox": "jest tests/unit/proxmox tests/integration/proxmox",
    "test:proxmox:unit": "jest tests/unit/proxmox",
    "test:traefik": "jest tests/unit/traefik tests/integration/traefik",
    "test:traefik:unit": "jest tests/unit/traefik",
    "test:argocd": "jest tests/unit/argocd tests/integration/argocd",
    "test:argocd:unit": "jest tests/unit/argocd",
    "test:cluster": "jest tests/integration/cluster",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage --passWithNoTests",
    "lint:fix": "eslint \"**/*.{ts,js}\" --fix",
    "quality:check": "npm run type-check && npm run lint && npm run format",
    "quality:fix": "npm run type-check && npm run lint:fix && npm run format",
    "ci:full": "npm run quality:check && npm run test:ci",
    "pre-commit": "npm run quality:fix && npm run test"
  }
}
